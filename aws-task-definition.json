{
  "family": "cronpulse-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "containerDefinitions": [
    {
      "name": "cronpulse",
      "image": "YOUR_ACCOUNT_ID.dkr.ecr.YOUR_REGION.amazonaws.com/cronpulse:latest",
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {"name": "SECRET_KEY", "value": "change-this-to-a-secure-random-string"},
        {"name": "JWT_SECRET", "value": "change-this-to-another-secure-random-string"},
        {"name": "ADMIN_EMAIL", "value": "admin@example.com"},
        {"name": "ADMIN_PASSWORD", "value": "ChangeThisPassword123"},
        {"name": "MAILGUN_API_KEY", "value": "optional-mailgun-key"},
        {"name": "MAILGUN_DOMAIN", "value": "optional-mailgun-domain"}
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/cronpulse",
          "awslogs-region": "YOUR_REGION",
          "awslogs-stream-prefix": "ecs",
          "awslogs-create-group": "true"
        }
      },
      "mountPoints": [
        {
          "sourceVolume": "cronpulse-data",
          "containerPath": "/app/data"
        }
      ]
    }
  ],
  "volumes": [
    {
      "name": "cronpulse-data",
      "efsVolumeConfiguration": {
        "fileSystemId": "REPLACE_WITH_EFS_ID",
        "transitEncryption": "ENABLED"
      }
    }
  ],
  "executionRoleArn": "arn:aws:iam::YOUR_ACCOUNT_ID:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::YOUR_ACCOUNT_ID:role/ecsTaskRole"
}
